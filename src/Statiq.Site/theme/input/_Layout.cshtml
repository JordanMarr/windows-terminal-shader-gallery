<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous" data-no-mirror>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1.19.0/themes/prism.css" data-no-mirror>
        <title>Windows Terminal Shader Gallery - @Document.GetString(WebKeys.Title)</title>
    </head>
    <body>
        <nav class="navbar navbar-light navbar-expand bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">Home</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        @foreach (IDocument child in OutputPages.GetChildrenOf(OutputPages["index.html"].Single()))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@(child.GetLink()).html">@child.GetString(WebKeys.Title)</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="mt-4">
                <h1>@Document.GetString(WebKeys.Title)</h1>
                <hr />
                @RenderBody()
            </div>
        </div>
    </body>
</html>